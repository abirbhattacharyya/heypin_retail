<div class="static-aligner">

    <div class="capsule login">
        <h1 class="ta-center">Login with Facebook or your email address, & start having fun!</h1>
        
        <div class="login-fb">
            <p><a href="/auth/facebook">Connect with Facebook</a></p>
        </div><!-- .login-fb -->
        
        <div class="login-em">
            <% form_for :user, :url => login_path do |f| %>
            <p>
                <label>Email:</label>
                <%= f.text_field :email %>
                <%= f.submit("Go!") %>
            </p>
            <% end %>

        </div><!-- .login-em -->
    </div><!-- .capsule.login -->

</div><!-- .static-aligner -->
